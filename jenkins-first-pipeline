pipeline {
    agent any
    stages {
        stage('poll scm') {
            steps {
                git credentialsId: 'git-key', url: 'git@github.com:gopal1409/chat-app-sapient.git'
            }
        }
        stage('mvn build') {
            steps {
                sh 'mvn -B -DskipTest clean package'
            }
        }
        stage('mvn test') {
            steps {
                sh 'mvn test'
                junit 'target/surefire-reports/*.xml'
            }
        }
        stage('checkstyle') {
            steps {
                sh 'mvn checkstyle:checkstyle'
                
            }
        }
    }
}
